{
  "schemaVersion": 1,
  "id": "modid",
  "version": "${version}",

  "name": "Minescript Mod",
  "description": "Mod for scripting Minecraft using Python",
  "authors": [
    "maxuser@minescript.net"
  ],
  "contact": {
    "homepage": "https://minescript.net/",
    "sources": "https://github.com/maxuser0/minescript",
    "issues": "https://github.com/maxuser0/minescript/issues"
  },

  "license": "GPL-3.0-only",
  "icon": "assets/modid/minescript-logo.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "net.minescript.fabric.MinescriptFabricMod"
    ]
  },

  "mixins": [
    "modid.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.15.2",
    "fabric": "*",
    "fabric-screen-api-v1": "*",
    "minecraft": "~1.20.4",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
